{
  "description": "Example Node.js application",
  "repository": "github:demo-source/node-app",
  "license": "Unlicense",
  "type": "module",
  "exports": {
    ".": "./lib-sample/example.js"
  },
  "scripts": {
    "test": "node test",
    "coverage": "node build && npx nyc node cjs/test"
  },
  "devDependencies": {
    "@babel/cli": "latest",
    "@babel/plugin-proposal-class-properties": "latest",
    "@babel/plugin-transform-modules-commonjs": "latest",
    "babel-eslint": "latest",
    "babel-plugin-istanbul": "latest",
    "eslint": "latest",
    "eslint-config-standard": "latest",
    "eslint-plugin-import": "latest",
    "eslint-plugin-node": "latest",
    "eslint-plugin-promise": "latest",
    "eslint-plugin-standard": "latest",
    "nyc": "latest"
  },
  "eslintIgnore": [
    "cjs/lib-sample",
    "cjs/test"
  ],
  "babel": {
    "plugins": [
      "@babel/plugin-transform-modules-commonjs",
      "@babel/plugin-proposal-class-properties"
    ],
    "env": {
      "test": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  },
  "nyc": {
    "reporter": [
      "lcov",
      "text",
      "html"
    ],
    "sourceMap": false,
    "instrument": false
  }
}
